<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item app:tsquare_state_range_middle="true">
        <color android:color="@color/color_day_range_selected_bg" />
    </item>
    <item android:state_selected="true">
        <color android:color="@color/color_day_current_bg" />
    </item>
    <item android:state_pressed="true">
        <color android:color="@color/color_day_current_bg" />
    </item>
    <!-- TODO:dongyiming.(不属于当月的day的背景)-->
    <item app:tsquare_state_current_month="false">
        <color android:color="@color/color_day_null_bg" />
    </item>
    <item app:tsquare_state_highlighted="true">
        <color android:color="@color/calendar_highlighted_day_bg" />
    </item>
    <item app:tsquare_state_today="true">
        <color android:color="@color/calendar_text_active" />
    </item>
    <!-- TODO:dongyiming.(当月的day的背景)-->
    <item>
        <color android:color="@color/color_day_bg" />
    </item>
</selector>
