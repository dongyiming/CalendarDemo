<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="calendar">
        <attr name="attr_time_value" format="string" />
        <attr name="attr_time_type" format="string" />
        <attr name="attr_margin_left" format="dimension" />
        <attr name="attr_margin_top" format="dimension" />
        <attr name="attr_margin_bottom" format="dimension" />
        <attr name="attr_value_color" format="color" />
        <attr name="attr_type_color" format="color" />
    </declare-styleable>

    <declare-styleable name="calendar_gridview">
        <attr name="attr_week_bg" format="color" />
        <attr name="attr_week_height" format="dimension" />
        <attr name="attr_week_text_size" format="dimension" />
        <attr name="attr_week_text_color" format="color" />
        <attr name="attr_month_height" format="dimension" />
        <attr name="attr_month_bg" format="color" />
        <attr name="attr_month_text_size" format="dimension" />
        <attr name="attr_month_text_color" format="color" />
        <attr name="attr_day_item_height" format="dimension" />
        <attr name="attr_day_item_bg" format="color" />
        <attr name="attr_day_item_current_bg" format="color" />
        <attr name="attr_day_item_selected_bg" format="color" />
        <attr name="attr_day_item_null_bg" format="color" />
        <attr name="attr_day_item_text_size" format="dimension" />
        <attr name="attr_day_item_text_color" format="color" />
        <attr name="attr_day_item_text_selected_color" format="color" />
        <attr name="attr_day_item_margin_left" format="dimension" />
        <attr name="attr_day_item_margin_right" format="dimension" />
        <attr name="attr_day_item_margin_top" format="dimension" />
        <attr name="attr_day_item_margin_bottom" format="dimension" />
        <attr name="attr_day_item_padding" format="dimension" />
        <attr name="attr_divider_height" format="dimension" />
        <attr name="attr_divider_color" format="color" />
        <attr name="attr_day_column_count" format="integer" />
        <attr name="attr_day_row_count" format="integer" />
    </declare-styleable>

    <declare-styleable name="CalendarPickerView">
        <attr name="android:background" />
        <attr name="tsquare_dividerColor" format="color" />
        <attr name="tsquare_dayBackground" format="reference" />
        <attr name="tsquare_dayTextColor" format="color" />
        <attr name="tsquare_titleTextStyle" format="reference" />
        <attr name="tsquare_displayHeader" format="boolean" />
        <attr name="tsquare_displayDayNamesHeaderRow" format="boolean" />
        <attr name="tsquare_displayAlwaysDigitNumbers" format="boolean" />
        <attr name="tsquare_headerTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="calendar_cell">
        <attr name="tsquare_state_selectable" format="boolean" />
        <attr name="tsquare_state_current_month" format="boolean" />
        <attr name="tsquare_state_today" format="boolean" />
        <attr name="tsquare_state_range_first" format="boolean" />
        <attr name="tsquare_state_range_middle" format="boolean" />
        <attr name="tsquare_state_range_last" format="boolean" />
        <attr name="tsquare_state_highlighted" format="boolean" />
    </declare-styleable>
</resources>